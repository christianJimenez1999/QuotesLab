<%- include ('temp/header'); -%>

<div class='container'>
	<div class='jumbotron'>
		<h3> INSPIRATIONAL QUOTES </h3>
		<a class='btn btn-primary' href='/'>Home</a>
	</div>
	<div class='row'>
        <%if(!authors){%>
            <h1 class='col-sm-12 nofound'>Empty database. Please add the first author!</h1>    
        <%}
        else{%>
        	<table>
        		<tr><th>Author</th><th>Action</th></tr>
        		<tr><td colspan="2"><hr/></td></tr>
        		<%authors.forEach(function(author){%>
            		<tr>
            			<td><%=author.firstName%> <%=author.lastName%></td>
            			<td><a href='/author/<%=author.authorId%>/edit'>Edit</a> | <a onclick="return confirm('Are you sure you want to delete this item?');"  href='/author/<%=author.authorId%>/delete'>Delete</a> </td></tr>
        		<%});%>
        	</table>
        <%}%>
        
        
    </div>
    
    
		<a class='btn btn-primary' href='/author/new'>New Author</a>
</div>

<%- include ('temp/footer'); -%>